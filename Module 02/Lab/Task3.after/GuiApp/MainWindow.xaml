<Window x:Class="GuiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab 01: Introduction to Visual Studio and C#" Height="350" Width="525" Background="#FFC1D4FF" Loaded="OnWindowLoaded">
    <Grid>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="availableProcessors" VerticalAlignment="Top" Width="479" />
        <Label Content="Enter Some Text:" Height="29" HorizontalAlignment="Left" Margin="12,41,0,0" Name="label1" VerticalAlignment="Top" FontWeight="Bold" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="137,43,0,0" Name="originalText" VerticalAlignment="Top" Width="272" />
        <Button Content="Process" Height="23" HorizontalAlignment="Right" Margin="0,43,12,0" Name="button1" VerticalAlignment="Top" Width="70" IsDefault="True" Click="OnProcessText" />
        <TextBlock Height="221" HorizontalAlignment="Left" Margin="12,76,0,0" Name="resultText" Text="" VerticalAlignment="Top" Width="479" Foreground="#FF176ED1" FontSize="32" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
    </Grid>
</Window>
